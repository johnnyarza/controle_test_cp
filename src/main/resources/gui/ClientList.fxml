<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>

<VBox minWidth="660.0" prefHeight="316.0" prefWidth="660.0"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="gui.ClientListController">
	<children>
		<Label text="Lista de Clientes">
			<font>
				<Font name="System Bold" size="14.0" />
			</font>
			<VBox.margin>
				<Insets left="8.0" />
			</VBox.margin>
		</Label>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<children>
				<Button fx:id="btNew" alignment="TOP_LEFT"
					mnemonicParsing="false" onAction="#onBtNewAction"
					styleClass="custom-button" text="Nuevo">
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Button>
				<Button fx:id="btEdit" mnemonicParsing="false"
					onAction="#onBtEditAction" styleClass="custom-button" text="Editar">
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Button>
				<Button fx:id="btDelete" mnemonicParsing="false"
					onAction="#onBtDeleteAction" styleClass="delete-button"
					text="Apagar">
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Button>
				<Button fx:id="btPrint" mnemonicParsing="false"
					onAction="#onBtPrintAction" styleClass="custom-button"
					text="Imprimir">
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Button>
								<HBox alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="240.0">
					<children>
						<Circle fx:id="circle1" fill="#216eff00" radius="8.0" stroke="#00c3ff" strokeType="INSIDE" strokeWidth="4.0">
							<HBox.margin>
								<Insets right="5.0" />
							</HBox.margin>
						</Circle>
						<Circle fx:id="circle2" fill="#1f93ff00" radius="8.0" stroke="#ea4848" strokeType="INSIDE" strokeWidth="4.0">
							<HBox.margin>
								<Insets right="5.0" />
							</HBox.margin>
						</Circle>
						<Circle fx:id="circle3" fill="#1f93ff00" radius="8.0" stroke="#0adf4d" strokeType="INSIDE" strokeWidth="4.0">
							<HBox.margin>
								<Insets right="5.0" />
							</HBox.margin>
						</Circle>
					</children>
				</HBox>
			</children>
			<padding>
				<Insets bottom="8.0" left="8.0" top="8.0" />
			</padding>
		</HBox>
		<TableView fx:id="tableViewClient" prefHeight="200.0"
			prefWidth="625.0">
			<columns>
				<TableColumn fx:id="tableColumnId" minWidth="40.0"
					prefWidth="50.0" styleClass="custom-style" text="iD" />
				<TableColumn fx:id="tableColumnName" minWidth="150.0"
					prefWidth="180.0" styleClass="description-column-style"
					text="Nombre" />
				<TableColumn fx:id="tableColumnPhone" minWidth="110.0"
					prefWidth="110.0" styleClass="custom-style" text="Telefono" />
				<TableColumn fx:id="tableColumnAddress" minWidth="150.0"
					prefWidth="150.0" styleClass="custom-style" text="UbicaciÃ³n" />
				<TableColumn fx:id="tableColumnEmail" minWidth="120.0"
					prefWidth="120.0" styleClass="custom-style" text="Correo E." />
			</columns>
		</TableView>
	</children>
</VBox>
